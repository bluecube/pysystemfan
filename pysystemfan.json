{
    "log_level": "DEBUG",

    "model": {
        "storage_path": "/tmp/pysystemfan_model.json"
    },

    "status_server": {
        "enabled": true,
        "bind": ""
    },

    "fans": [
        {
            "name": "Fan",
            "pwm_path": "/sys/class/hwmon/hwmon2/pwm1",
            "rpm_path": "/sys/class/hwmon/hwmon2/fan1_input"
        }
    ],

    "thermometers": [
        {
            "name": "System temp",
            "path": "/sys/class/hwmon/hwmon2/temp1_input",
            "max_temperature": 52
        }
    ],

    "harddrives": [
        {
            "name": "/dev/sda",
            "path": "/dev/sda",
            "measure_in_idle": true,
            "max_temperature": 39,
            "spindown_time": 1800
        },
        {
            "name": "/dev/sdb",
            "path": "/dev/sdb",
            "measure_in_idle": true,
            "max_temperature": 39,
            "spindown_time": 1800
        },
        {
            "name": "/dev/sdd",
            "path": "/dev/sdd",
            "measure_in_idle": true,
            "max_temperature": 39,
            "spindown_time": 1800
        },
        {
            "name": "/dev/sdc",
            "path": "/dev/sdc",
            "measure_in_idle": true,
            "max_temperature": 39
        }
    ]
}
