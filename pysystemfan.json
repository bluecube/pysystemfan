{
    "update_time": 15,
    "log_level": "DEBUG",
    "status_server": {
        "port": 8018
    },
    "fans": [
        {
            "class": "SystemFan",
            "name": "Fan",
            "pwm_path": "/sys/class/hwmon/hwmon2/pwm1",
            "rpm_path": "/sys/class/hwmon/hwmon2/fan1_input",

            "fan_max_rpm_sanity_check": 5000,

            "pid": {
                "kP": 25,
                "kI": 0.5,
                "kD": 500
            },

            "thermometers": [
                {
                    "class": "SystemThermometer",
                    "name": "System temp",
                    "path": "/sys/class/hwmon/hwmon2/temp1_input",
                    "target_temperature": 45
                },
                {
                    "class": "SystemThermometer",
                    "name": "CPU core 0",
                    "path": "/sys/class/thermal/thermal_zone1/temp",
                    "target_temperature": 60
                },
                {
                    "class": "SystemThermometer",
                    "name": "CPU core 1",
                    "path": "/sys/class/thermal/thermal_zone2/temp",
                    "target_temperature": 60
                },
                {
                    "class": "Harddrive",
                    "name": "/dev/sda",
                    "path": "/dev/sda",
                    "measure_in_idle": true,
                    "target_temperature": 36,
                    "spindown_time": 1800,
                    "spinning_only_activity": true
                },
                {
                    "class": "Harddrive",
                    "name": "/dev/sdb",
                    "path": "/dev/sdb",
                    "measure_in_idle": true,
                    "target_temperature": 36,
                    "spindown_time": 1800,
                    "spinning_only_activity": true
                },
                {
                    "class": "Harddrive",
                    "name": "/dev/sdd",
                    "path": "/dev/sdd",
                    "measure_in_idle": true,
                    "target_temperature": 36,
                    "spindown_time": 1800,
                    "spinning_only_activity": true
                },
                {
                    "class": "Harddrive",
                    "name": "/dev/sdc (SSD)",
                    "path": "/dev/sdc",
                    "measure_in_idle": true,
                    "target_temperature": 45
                }
            ]
        }
    ]
}
