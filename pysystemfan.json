{
    "model": {
        "storage_path": "/tmp/pysystemfan_model.json"
    },

    "status_server": {
        "enabled": true
    },

    "fans": [
        {
            "pwm_path": "/sys/class/hwmon/hwmon2/pwm1",
            "rpm_path": "/sys/class/hwmon/hwmon2/fan1_input"
        }
    ],

    "thermometers": [
        {
            "name": "System temp",
            "path": "/sys/class/hwmon/hwmon2/temp1_input",
            "max_temperature": 52
        }
    ],

    "harddrives": [
        {
            "path": "/dev/sda",
            "max_temperature": 39,
            "spindown_time": 1800
        },
        {
            "path": "/dev/sdb",
            "max_temperature": 39,
            "spindown_time": 1800
        },
        {
            "path": "/dev/sdd",
            "max_temperature": 39,
            "spindown_time": 1800
        },
        {
            "path": "/dev/sdc",
            "max_temperature": 39
        }
    ]
}
