                },
                {
                    "name": "sda",

                    "path": "smartctl:/dev/sda",
                    "target_temperature": 35,
                    "fan_start_temperature": 39
                },
                {
                    "name": "sdb",

                    "path": "smartctl:/dev/sdb",
                    "target_temperature": 35,
                    "fan_start_temperature": 39
                },
                {
                    "name": "sdd",

                    "path": "smartctl:/dev/sdd",
                    "target_temperature": 36,
                    "fan_start_temperature": 39
                }
            ]
        }
    ]
}
